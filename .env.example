# Базовые настройки
DJANGO_SECRET_KEY=change-me
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_DEBUG=false

# Postgres
POSTGRES_DB=bot_service
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=bot_pass
DATABASE_URL=postgresql+psycopg://bot_user:bot_pass@db:5432/bot_service

# Telegram
BOT_TOKEN=your-telegram-bot-token

# Google Sheets / Drive
GOOGLE_SHEET_ID=your-spreadsheet-id
GOOGLE_CATEGORIES_SHEET=Categories
GOOGLE_REPORTING_SHEET=Reports
# один из вариантов авторизации: файл или json-строка
GOOGLE_SERVICE_ACCOUNT_FILE=/run/secrets/google.json
GOOGLE_SERVICE_ACCOUNT_JSON=

# Внешние сервисы (если запускаете не через docker-compose)
CATEGORIES_SERVICE_URL=http://localhost:8001/api
REQUESTS_SERVICE_URL=http://localhost:8000/api
APPROVALS_SERVICE_URL=http://localhost:8002/api
FILES_SERVICE_URL=http://localhost:8100
REPORTING_SERVICE_URL=http://localhost:8200
